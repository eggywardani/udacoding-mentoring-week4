<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="9dp"
    android:layout_margin="5dp"
    android:padding="10dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/tanggal"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btn_hapus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_clear_24"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/nama"
            app:drawableStartCompat="@drawable/ic_name" />



        <TextView
            android:id="@+id/tv_nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/no_hp"
            app:drawableStartCompat="@drawable/ic_number" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/alamat"
                app:drawableStartCompat="@drawable/ic_baseline_home_24" />

            <TextView
                android:id="@+id/tv_asal_kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/alamat"
                android:layout_marginStart="10dp"
                android:padding="1dp"
                android:layout_toEndOf="@+id/tv_alamat"
                />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>